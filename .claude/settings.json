{
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Read(.claude/skills/)",
      "mcp__video_gen_tools__get_icon",
      "mcp__video_gen_tools__search_icons",
      "Skill(asset-creator)",
      "Skill(video-coder)",
      "Skill(video-creator)",
      "Skill(video-designer)",
      "Skill(video-director)",
      "Write(Outputs/**)",
      "Edit(Outputs/*/Direction/**)",
      "Edit(Outputs/*/Design/**)",
      "Edit(Outputs/*/Video/**)",
      "Edit(Outputs/*/Assets/**)"
    ],
    "deny": ["Write(*)"],
    "ask": []
  },
  "enabledMcpjsonServers": ["video_gen_tools"],
  "hooks": {
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python scripts/claude_cli/hooks/subagent-stop-hook.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
